document.addEventListener('DOMContentLoaded', function () {
    //benefits
    (function () {
        const buttons = document.querySelectorAll('[data-img-src]');
        const image = document.querySelector('#mockupImg');
        buttons.forEach(button => {
            button.onclick = function () {
                clearActive(buttons);
                image.setAttribute('src', this.dataset.imgSrc);
                this.classList.add('purple')
            }
        });

        function clearActive(buttons) {
            buttons.forEach(button => button.classList.remove('purple'))
        }
    })();
});